<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ChatActivity"
        android:orientation="vertical"
        android:layout_margin="16dp">

    <ScrollView android:layout_width="match_parent" android:layout_height="0dp"
                android:layout_weight="1">
        <ListView android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:id="@+id/messages_list_view"/>
    </ScrollView>

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <EditText android:layout_width="0dp" android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:id="@+id/message_edit_text"/>

        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                   android:id="@+id/send_icon_image_view"
                   android:scaleType="fitCenter"
                   android:src="@drawable/ic_send"/>
    </LinearLayout>
</LinearLayout>